---
import AppShell from "../layouts/AppShell.astro";
import { AvContainer, AvButton } from "@ansiversa/components";

const title = "Clipboard Translator – Ansiversa";
const description = "Translate copied text instantly.";
---

<AppShell title={title} description={description}>
  <!-- Hero -->
  <section class="av-hero">
    <AvContainer size="narrow" className="av-hero__content--narrow">
      <div class="av-hero__content">
        <div class="av-kicker">
          <span>Developer & Utility · Ansiversa Mini App</span>
        </div>
        <h1 class="av-gradient-text">Clipboard Translator</h1>
        <p>
          Translate copied text instantly.
        </p>
      </div>
      <div class="av-cta-row">
        <AvButton href="https://clipboard-translator.ansiversa.com">Launch Clipboard</AvButton>
      </div>
    </AvContainer>
  </section>

  <!-- Problem -->
  <section class="av-section">
    <AvContainer size="narrow">
      <div class="av-section-header">
        <h2 class="av-section-title">The problem it solves</h2>
        <p class="av-section-lead">
          You often switch between many small tools for everyday tasks.
        </p>
      </div>
      <div class="av-section-body space-y-3 text-slate-300">
        <p>Clipboard Translator gives you one focused place to get this specific job done.</p>
      </div>
    </AvContainer>
  </section>

  <!-- Why this mini app -->
  <section class="av-section">
    <AvContainer size="narrow">
      <div class="av-section-header">
        <h2 class="av-section-title">Why Clipboard Translator feels different</h2>
        <p class="av-section-lead">
          A focused mini app inside the larger Ansiversa ecosystem.
        </p>
      </div>
      <div class="av-section-body">
        <ul class="space-y-2 text-slate-300 list-disc list-inside">
          <li>Removes the need to search for another one-off tool online.</li>
          <li>Keeps your workflow fast, clean, and repeatable.</li>
          <li>Lives inside the same secure, familiar Ansiversa environment.</li>
        </ul>
      </div>
    </AvContainer>
  </section>

  <!-- How it works -->
  <section class="av-section">
    <AvContainer size="narrow">
      <div class="av-section-header">
        <h2 class="av-section-title">How it works</h2>
        <p class="av-section-lead">
          Simple, clear steps so people can start in under a minute.
        </p>
      </div>
      <ol class="av-section-body space-y-2 text-slate-300 list-decimal list-inside">
        <li>Open Clipboard Translator whenever this task comes up.</li>
        <li>Paste, upload, or input exactly what you need to process.</li>
        <li>Get a clean result you can download, copy, or reuse instantly.</li>
      </ol>
    </AvContainer>
  </section>

  <!-- Final CTA -->
  <section class="av-section">
    <AvContainer size="narrow">
      <div class="av-section-header">
        <h2 class="av-section-title">Ready to try Clipboard Translator?</h2>
        <p class="av-section-lead">
          Open the app, follow the simple flow, and let it handle the heavy lifting.
        </p>
      </div>
      <div class="av-cta-row">
        <AvButton href="https://clipboard-translator.ansiversa.com">Start with Clipboard</AvButton>
      </div>
    </AvContainer>
  </section>
</AppShell>
